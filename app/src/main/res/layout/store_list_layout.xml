<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        android:padding="20dp"
        app:cardElevation="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/storeImage"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:elevation="10dp"
                    android:src="@drawable/warung_1" />

                <TextView
                    android:id="@+id/storeRating"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="-6dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignBottom="@id/storeImage"
                    android:background="@drawable/rate"
                    android:drawableLeft="@drawable/baseline_star_black_24dp"
                    android:elevation="100dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="rating"
                    android:textColor="@color/orange_100"
                    android:textSize="8sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/storeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/roboto"
                    android:text="Store Name"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/storeDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/storeName"
                    android:gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Store Distance" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>